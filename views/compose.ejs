<%- include('./partials/header') -%>

<h1>Compose</h1>

<form action="./compose" method="POST">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" class="form-control" name="inputTitle" id="postTitle" autocomplete="off">
  </div>

  <div>
    <label for="postBody">Post</label><br>
    <textarea type="text" class="form-control" rows="3" name="inputPost" autocomplete="off" id="postBody"></textarea>
  </div>

  <button class="btn btn-primary publish-btn" type="submit" name="button" >Publish</button>
</form>

<%- include('./partials/footer') -%>