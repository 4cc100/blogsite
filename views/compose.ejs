<%- include('./partials/header') -%>

<h1>Compose</h1>

<form action="./compose" method="POST">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input 
      type="text" 
      class="form-control" 
      name="postTitle" 
      id="postTitle" 
      autocomplete="off">
  </div>

  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea 
      type="text" 
      class="form-control" 
      name="postBody" 
      id="postBody" 
      autocomplete="off"  
      rows="3"></textarea>
  </div>

  <button 
    class="btn btn-primary publish-btn" 
    type="submit" 
    name="button" >Publish</button>
</form>

<%- include('./partials/footer') -%>