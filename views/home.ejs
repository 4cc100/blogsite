<%- include('./partials/header') -%>

<h1>Home</h1>

<p class="default-text"><%= homeKezdoTartalom %></p>

<hr>




<% for(let i = 0; i < posts.length; i++) { %>
  <h2> <a class="post-title-link" href="./posts/<%= posts[i]._id %>"> <%= posts[i].title %> </a>  </h2>

  <% if(posts[i].content.length > 100){ %>
    <p> 
      <%= posts[i].content.substring(0,100) + " ..." %> 
      <a href="./posts/<%= posts[i].title %>">Read more</a>
    </p>
    
  <% } else { %>
    <p> <%= posts[i].content %> </p>
  <% } %>
  
  <hr>
<% } %>


